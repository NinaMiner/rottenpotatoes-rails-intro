-#  This file is app/views/movies/index.html.haml
%h2 All Movies

-#Insert code from part2 for checkboxes
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    -# add to remember checked rating box
    = check_box_tag "ratings[#{rating}]",1,@ratings.include?(rating), id: "ratings_#{rating}"
  = submit_tag 'Refresh', :class => 'btn btn-primary'

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{class:('hilite' if @sort=='title')}= link_to "Movie Title", movies_path(sort:"title"), id:"title_header"
      -#Attempt 1: , {:controller=> 'title_header'}
      %th Rating
      %th{class:('hilite' if @sort=='release_date')}= link_to "Release Date", movies_path(sort:"release_date"), id:"release_date_header"
      -#Attempt 1: , {:controller=> 'release_date_header'}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
